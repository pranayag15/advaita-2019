<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/signup-in.css">
    <link rel="stylesheet" href="/stylesheets/navbar.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <title>ADVAITA</title>
</head>
<body>
  <div id="particles-js"></div>
  <% include navbar %>
  
    <div class="form">
        <ul class="tab-group">
          <li class="tab active"><a href="#signup">Sign Up</a></li>
          <li class="tab"><a href="#login">Log In</a></li>
        </ul>
        
        <div class="tab-content">
          <div id="signup">   
            <h1>Sign Up</h1>
            
            <form action="/register" method="POST">
            
            <div class="top-row">
              <div class="field-wrap">
                <label class="label">
                  First Name<span class="req">*</span>
                </label>
                <input type="text" name="name1" id="name1" value="<%=name1%>" autocomplete="off" >
              </div>
          
              <div class="field-wrap">
                <label class="label">
                  Last Name<span class="req">*</span>
                </label>
                <input type="text" name="name2" id="name2" value="<%=name2%>" autocomplete="off" required>
              </div>
            </div>
    
            <div class="field-wrap">
              <label class="label">
                Email Address<span class="req">*</span>
              </label>
              <input type="email" name="email" id="email" value="<%=email%>" required autocomplete="off"/>
            </div>
              
            <div class="field-wrap">
                    <label class="label">
                    College<span class="req">*</span>
                    </label>
                    <input type="text" id="college"  name="college" value="<%=college%>" required autocomplete="off"/>
                </div>
              
              <div class="top-row">
                    <div class="field-wrap">
                            <label class="label">
                              Gender(male/female)<span class="req">*</span>
                            </label>
                            <input type="text" name="gender" id="gender" value="<%=gender%>" required autocomplete="off"/>
                          </div>
                

              
              <div class="field-wrap">
              <label class="label">
                City<span class="req">*</span>
              </label>
              <input type="text" name="city" id="city" value="<%=city%>" required autocomplete="off"/>
            </div>
        </div>
            
              <div class="field-wrap">
              <label class="label">
                Phone Number<span class="req">*</span>
              </label>
              <input type="number" id="phone" name="phone" value="<%=phone%>" required autocomplete="off"/>
            </div>
            
            <div class="top-row">
              <div class="field-wrap">
              <label class="label">
                Set A Password<span class="req">*</span>
              </label>
              <input type="password" id="password" name="password" required autocomplete="off"/>
            </div>
              
            <div  id="last">
              <label class="label">
                Confirm Password<span class="req">*</span>
              </label>
              <input type="password" id="confirm-passowrd" name="confirm-password" required autocomplete="off"/>
            </div>
            </div>
            
            <button type="submit" class="button button-block" onclick=" empty()">Get Started</button>
            
            </form>
    
          </div>
          
          <div id="login">   
            <h1>Welcome Back!</h1>
            
            <form action="/login" method="POST">
            
              <div class="field-wrap">
              <label class="label">
                Email Address<span class="req">*</span>
              </label>
              <input type="email" name="email" id="login-email" required autocomplete="off"/>
            </div>
            
            <div class="field-wrap">
              <label class="label">
                Password<span class="req">*</span>
              </label>
              <input type="password" name="password" id="login-password" required autocomplete="off"/>
            </div>
            
            <p class="forgot"><a href="#">Forgot Password?</a></p>
            
            <button class="button button-block" >Log In</button>
            
            </form>
    
          </div>
          
        </div><!-- tab-content -->
        
    </div> <!-- /form -->
<script src="/javascripts/bkrnd.js"></script>
<script>
    function empty(){
        var name1;
        name1 = $("#name1").val();
        console.log(name1, "kuch to aya");
        if(name1==""){
            alert("alert");
        }
    }
</script>
<script src="/javascripts/signup-in.js"></script>
</body>
</html>