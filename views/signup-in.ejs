<body>
      <% include navbar %>
    <a href="/"><img class="logoheading" src="/images/advaita.png"></a>
  <canvas id='c'></canvas>
    <div class="form">
        <ul class="tab-group">
          <li class="tab active"><a href="#signup">Sign Up</a></li>
          <li class="tab"><a href="#login">Log In</a></li>
        </ul>
        
        <div class="tab-content">
          <div id="signup">   
            <h1>Sign Up</h1>
            
            <form action="/register" method="POST">
            
            <div class="top-row">
              <div class="field-wrap">
                <label class="label">
                  First Name<span class="req">*</span>
                </label>
                <input type="text" name="name1" id="name1" value="<%=name1%>" autocomplete="off" >
              </div>
          
              <div class="field-wrap">
                <label class="label">
                  Last Name<span class="req">*</span>
                </label>
                <input type="text" name="name2" id="name2" value="<%=name2%>" autocomplete="off"  >
              </div>
            </div>
    
            <div class="field-wrap">
              <label class="label">
                Email Address<span class="req">*</span>
              </label>
              <input type="email" name="email" id="email" value="<%=email%>"   autocomplete="off"/>
            </div>
              
            <div class="field-wrap">
                    <label class="label">
                    College<span class="req">*</span>
                    </label>
                    <input type="text" id="college"  name="college" value="<%=college%>"   autocomplete="off"/>
                </div>
              
              <!--<div class="top-row">-->
                    <div class="field-wrap">
                            <label class="label">
                              Gender(male/female)<span class="req">*</span>
                            </label>
                            <input type="text" name="gender" id="gender" value="<%=gender%>"  autocomplete="off"/>
                          </div>
                

              
              <div class="field-wrap">
              <label class="label">
                City<span class="req">*</span>
              </label>
              <input type="text" name="city" id="city" value="<%=city%>"   autocomplete="off"/>
            </div>
        <!--</div>-->
            
              <div class="field-wrap">
              <label class="label">
                Phone Number<span class="req">*</span>
              </label>
              <input type="number" id="phone" name="phone" value="<%=phone%>"   autocomplete="off"/>
            </div>
            
            <!--<div class="top-row">-->
              <div class="field-wrap">
              <label class="label">
                Set A Password<span class="req">*</span>
              </label>
              <input type="password" id="password" name="password"   autocomplete="off"/>
            </div>
              
            <div  id="last">
              <label class="label">
                Confirm Password<span class="req">*</span>
              </label>
              <input type="password" id="confirm-passowrd" name="confirm-password"   autocomplete="off"/>
            </div>
            <!--</div>-->
            
            <button type="submit" class="button button-block" onclick="return empty()">Get Started</button>
            <% if(typeof existingUsername == 'object' && existingUsername.length != 0 ){ %>
              <script>
                $(document).ready(function(){
                  alert("Entered email is already registered");
                })
              </script>
            <% }%>
            </form>
    
          </div>
          
          <div id="login">   
            <h1>Welcome Back!</h1>
            
            <form action="/login" method="POST">
            
              <div class="field-wrap">
              <label class="label">
                Email Address<span class="req">*</span>
              </label>
              <input type="email" name="email" id="login-email"/>
            </div>
            
            <div class="field-wrap">
              <label class="label">
                Password<span class="req">*</span>
              </label>
              <input type="password" name="password" id="login-password"   autocomplete="off"/>
            </div>
          
            <button class="button button-block" >Log In</button>
            
            </form>
    
          </div>
          
        </div><!-- tab-content -->
        
    </div> <!-- /form -->
    
<script src="/javascripts/bkrnd.js"></script>
