  <div class="console-form" id="console-form">
    <div class="cf-row" id="taskbar">
      <p id="title">contact_me.sh</p>
      <ul id="buttons" class="buttons">
        <li id="red" class="button"></li>
        <li id="yellow" class="button"></li>
        <li id="green" class="button"></li>
      </ul>

    </div>
    <div id="console" class="cf-row">
      <div class="cf-container">
        <form action="/register" method="POST">
          <div class="cf-line-row">
            <label>Name</label>
            <input name="name" type="text" id="name" class="focus" placeholder="Enter your name" value="<%= name %>">
          </div>
          <br>
          <div class="cf-line-row">
            <label for="">email</label>
            <input name="email" type="text" id="email" class="focus" placeholder="Enter your email" value="<%=email%>">
          </div>
          <br>
          <div class="cf-line-row">
            <label for="">College</label>
            <input name="college" type="text" id="college" placeholder="Enter your college" value="<%=college%>">
          </div>
          <br>
          <div class="cf-line-row">
            <label for="">City</label>
            <input name="city" type="text" id="city" placeholder="Enter your city" value="<%=city%>">
          </div>
          <br>
          <div class="cf-line-row" id="message-row">
            <label for="">Phone-number</label>
            <input name="phone" type="number" id="phone" placeholder="Enter your phone number" value="<%=phone%>">
            <!-- <textarea name="message" rows="2" cols="auto" placeholder="Enter a message"></textarea> -->
          </div>
          <br>
          <!-- <div class="cf-line-row">
            <label for="">Gender</label>
            <input name="subject" type="text" placeholder="Enter " value="">
          </div>
          <br> -->
          <div class="cf-line-row">
            <label for="">Password</label>
            <input name="password" type="password" id="password" placeholder="Password" value="">
          </div>
          <br>
          <div class="cf-line-row">
            <label for="">confirm-password</label>
            <input name="confirm-password" type="password" id="confirm-password" placeholder="Confirm Password" value="">
          </div>
          <br>
          <div class="cf-line-row">
            <div class="label" id="submit-label">submit</div>
            <button id="cf-submit-button" class="cf-button" onclick="return empty()" >[Submit]</button>
          </div>
        </form>
      </div>
    </div>
  </div>

<!-- The Modal -->
<div id="myModal" class="modal">

  <div class="modal-content">
    <span class="close">&times;</span>
    <% if(errorMessages.length != 0){ %>
      <div onload="display()">
        <div class="msg">
          <ul>
              <% errorMessages.forEach((err)=>{ %>
                <li><%= err.msg %></li>
              <%})%>
          </ul>
        </div>
      </div>
    <%} else {%>
      <div class="msg"><p>Fill all fields.</p></div>
    <%}%>
  </div>

</div>

